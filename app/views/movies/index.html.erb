<p class="notice">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>

  <section >
        <ul>
          <% if !user_session %>
            <li class="active">
              <%= link_to 'Rate Movies', new_user_session_path, class: "button" %>
            </li>
          <% else %>
            <li class="active">
              <%= link_to 'Add a Movie', new_movie_path, class: "button" %>
            </li>
          <% end %>
        </ul>

        <ul class = "movies">
          <% @movies.each do |movie| %>
            <li><%= movie.title %></li>

            <ul>
              <% (1..5).each do |i| %>
                <%= rating(current_user, i, movie) %>
              <% end %>
            </ul>

          <% end %>
        </ul>
    </section>
</p>
